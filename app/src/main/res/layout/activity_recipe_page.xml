<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cookhelper.isaactate.com.cookhelper.RecipePage"
    android:background="#B3A580">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="185dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:background="@drawable/tomatos" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garlic Sun Dried Tomatos"
                android:id="@+id/textView23"
                android:layout_gravity="center"
                android:textSize="30dp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients:\n-Tomatos\n-Garlic\n-Olive Oil\n-Salt and Pepper"
                android:id="@+id/textView24"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="\nInstruction:\n1. Preheat oven to 200 Degrees F\n2. Wash and halve tomatos\n3. Bake Tomatos"
                android:id="@+id/textView25"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
